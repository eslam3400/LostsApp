            <div class="login-reg-bg">
              <div class="log-reg-area sign">
                <h2 class="log-title">Login</h2>
                <form method="POST" action="/login">
                  <div class="form-group">
                    <input type="text" name="email" required="required" />
                    <label class="control-label" for="login-username"
                      >Email</label
                    ><i class="mtrl-select"></i>
                  </div>
                  <div class="form-group">
                    <input
                      type="password"
                      name="password"
                      required="required"
                    />
                    <label class="control-label" for="login-password"
                      >Password</label
                    ><i class="mtrl-select"></i>
                  </div>
                  <div class="submit-btns">
                    <button
                      id="login-action"
                      class="mtr-btn signin"
                      type="submit"
                    >
                      <span>Login</span>
                    </button>
                    <button class="mtr-btn signup" type="button">
                      <span>Signup</span>
                    </button>
                  </div>
                </form>
              </div>
              <div class="log-reg-area reg">
                <h2 class="log-title">Signup</h2>
                <form method="POST" action="/signup">
                  <div class="form-group">
                    <input type="text" required name="first_name" />
                    <label class="control-label" for="signup-fname"
                      >First Name</label
                    ><i class="mtrl-select"></i>
                  </div>
                  <div class="form-group">
                    <input type="text" required name="last_name" />
                    <label class="control-label" for="signup-lname"
                      >Last Name</label
                    ><i class="mtrl-select"></i>
                  </div>
                  <div class="form-group">
                    <input type="text" required name="email" />
                    <label class="control-label" for="signup-email">Email</label
                    ><i class="mtrl-select"></i>
                  </div>
                  <div class="form-group">
                    <input type="text" required name="username" />
                    <label class="control-label" for="signup-username"
                      >User Name</label
                    ><i class="mtrl-select"></i>
                  </div>
                  <div class="form-group">
                    <input type="password" required name="password" />
                    <label class="control-label" for="signup-password"
                      >Password</label
                    ><i class="mtrl-select"></i>
                  </div>
                  <div class="form-group">
                    <input type="text" required name="signup-area" />
                    <label class="control-label" name="location"
                      >Country & Town ex (Egypt/Alexandria)</label
                    ><i class="mtrl-select"></i>
                  </div>
                  <div class="form-group">
                    <input type="text" required name="gender" />
                    <label class="control-label" for="signup-gender"
                      >Gender</label
                    >
                    <i class="mtrl-select"></i>
                  </div>
                  <div class="checkbox">
                    <label>
                      <input
                        type="checkbox"
                        checked="checked"
                        name="agree"
                        required
                      /><i class="check-box"></i>Accept Terms & Conditions ?
                    </label>
                  </div>
                  <div class="submit-btns">
                    <button class="mtr-btn signin" type="submit">
                      <span>Signup</span>
                    </button>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
